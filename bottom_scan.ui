   <string notr="true">
#BottomScanScreen {
    background-color: #f0f2f5;
    font-family: Arial, sans-serif;
}

/* Header */
#headerFrame {
    background-color: #1976d2;
}
#headerLabel {
    color: white;
    font-size: 20pt;
    font-weight: bold;
}

/* Tip Box Styles */
QFrame.TipBox { /* Using a class-like selector for the common style */
    min-width: 20px;
    max-width: 20px;
    min-height: 20px;
    max-height: 20px;
    border: 2px solid #1976d2; /* Blue Border */
    background-color: #e3f2fd; /* Light Blue Fill (Active Indicator) */
    border-radius: 4px;
}
QFrame#selectedTipBox {
    background-color: white; /* Make the 'Selected Part' box less prominent/active */
    border-color: #e0e0e0;
}


/* Scanning Labels */
#scanLabel {
    font-size: 18pt;
    font-weight: bold;
    color: #333;
    /* Removed redundant qproperty-alignment as it's set by layout */
}
#selectedPartLabel {
    font-size: 16pt;
    color: #555;
    /* Removed redundant qproperty-alignment as it's set by layout */
}

/* Progress Bar */
QProgressBar {
    border: 2px solid #1976d2;
    border-radius: 10px;
    text-align: center;
    font-size: 16pt;
}
QProgressBar::chunk {
    background-color: #4CAF50; /* Changed to green for process progress */
}

/* Footer (Progress Bar is now here) */
#footerFrame {
    background-color: #ffffff;
    border-top: 1px solid #e0e0e0;
}
